{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["airbnb"],
  "rules": {
    "semi": "off",
    "import/no-dynamic-require": "off",
    "global-require": "warn",
    "object-shorthand": "warn"
  }
}
